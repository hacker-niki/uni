@{
}
@addTagHelper *, WEB_253505.UI


@if (!Model.Admin)
{
    <div class="row row-cols-md-3 g-3">
        @foreach (var item in Model.Products)
        {
            <div class="col p-4">
                <div class="card h-100">
                    <img src="@item.Image" class="card-img-top max-height:200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text mb2">@item.Description</p>
                        <h4 class="card-text ">@item.Price BYN</h4>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-outline-primary"
                           asp-controller="Cart"
                           asp-action="Add"
                           asp-route-id="@item.Id"
                           asp-route-returnurl="@Model.ReturnUrl">
                            Add to cart <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <pager current-page="@Model.CurrentPage"
           total-pages="@Model.TotalPages"
           category="@Model.CurrentCategory">
    </pager>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Цена
            </th>
            <th>
                Изображение
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <img src="@item.Image" style="max-width:150px;">
                </td>
                <td>
                    <a class="btn btn-success"
                       asp-page="./Edit"
                       asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i> Изменить
                    </a>

                    <a class="btn btn-info"
                       asp-page="./Details"
                       asp-route-id="@item.Id">
                        <i class="fa-solid fa-info"></i> Подробнее
                    </a>

                    <a class="btn btn-danger"
                       asp-page="./Delete"
                       asp-route-id="@item.Id">
                        <i class="fa-regular fa-trash-can"></i> Удалить
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <pager current-page="@Model.CurrentPage"
           total-pages="@Model.TotalPages"
           admin="true">
    </pager>
}